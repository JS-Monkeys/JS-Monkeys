extends shared/layout
block main-content
    - var nextPage = page + 1;
    - var prevPage = ((page - 1) > 0) ? page - 1 : page;

    .panel.panel-default
        h2.panel-heading.text-center
            | All existing users
        .panel-body
            div.text-center
                ul.pagination
                    li
                        a(href="?page=" + prevPage) <<
                    if(prevPage !== page)
                        li
                            a(href="?page=" + prevPage)= prevPage
                    li
                        a(href="/#")= page
                    li
                        a(href="?page=" + nextPage)= nextPage
                    li
                        a(href="?page=" + nextPage) >>
            table.table.table-all-users
                thead
                    tr
                        th.text-center #
                        th.text-center Username
                        th.text-center Points
                tbody
                    each user,i in users
                        tr.text-center
                            if i + 1 === 1
                                td#goldUser.topUsers=i + 1
                            else if i + 1 === 2
                                td#silverUser.topUsers=i + 1
                            else if i + 1 === 3
                                td#bronzeUser.topUsers=i + 1
                            else
                                td=i + 1
                            td=user.username
                            td=user.points
            div.text-center
                ul.pagination
                    li
                        a(href="?page=" + prevPage) <<
                    if(prevPage !== page)
                        li
                            a(href="?page=" + prevPage)= prevPage
                    li
                        a(href="/#")= page
                    li
                        a(href="?page=" + nextPage)= nextPage
                    li
                        a(href="?page=" + nextPage) >>