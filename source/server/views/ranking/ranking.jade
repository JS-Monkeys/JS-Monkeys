extends ../shared/layout
block main-content
    img.champ(src="/assets/champ.png")
    table.table.table-striped.table-hover
        thead
            tr
                th.text-center #
                th.text-center Username
                th.text-center Points
        tbody
            each user,i in usersByRank
                tr.text-center
                    if i+1 === 1
                        td#goldUser.topUsers=i+1
                    else if i+1 === 2
                        td#silverUser.topUsers=i+1
                    else if i+1 === 3
                        td#bronzeUser.topUsers=i+1
                    else
                        td=i+1
                    td=user.username
                    td=user.points



