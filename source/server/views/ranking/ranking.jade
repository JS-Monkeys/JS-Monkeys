extends ../shared/layout
block main-content
    img.champ(src="/assets/champ.png")
    table.table.table-striped.table-hover
        thead.text-center
            tr
                th #
                th Username
                th Points
        tbody
            each user,i in usersByRank
                tr
                    td=i+1
                        if i+1 === 1
                            #goldUser.topUsers
                        if i+1 === 2
                            #silverUser.topUsers
                        if i+1 == 3
                            #bronzeUser.topUsers
                    td=user.username
                    td=user.points



