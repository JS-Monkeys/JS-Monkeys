extends ../shared/layout
block main-content
  .col-lg-12
    img.champ(src="/assets/champ.png")
    table.table-half-size.table.table-striped.table-hover
      thead
        tr
          th.text-center #
          th.text-center Username
          th.text-center Points
      tbody
        each user,i in usersByRank
          tr.text-center
            if i+1 === 1
              td#goldUser.topUsers=i+1
            else if i+1 === 2
              td#silverUser.topUsers=i+1
            else if i+1 === 3
              td#bronzeUser.topUsers=i+1
            else
              td=i+1
            td
              a(href="/api/users/details?username=" + user.username)=user.username
            td=user.points
    #search-bar.well
      form.form-horizontal(name="byRank" action="/api/users/rankings")
        fieldset
          legend Search users by rank
          .form-group
            label.col-lg-2.control-label(for="from") From
            .col-lg-10
              input#from.form-control(type="number", placeholder="From", name="from")
          .form-group
            label.col-lg-2.control-label(for="to") To
            .col-lg-10
              input#to.form-control(type="number", placeholder="To", name="to")
          .form-group
            .col-lg-10.col-lg-offset-2
              input.btn.btn-primary(type="submit" value="Submit")
      br
      form.form-horizontal(name="byUsername" action="/api/users/details")
        filedset
          legend Search by username
          .form-group
            label.col-lg-2.control-label(for="user") User
            .col-lg-10
              input#user.form-control(type="text", placeholder="Username" name="username")
          .form-group
            .col-lg-10.col-lg-offset-2
              button.btn.btn-primary(type='submit') Submit

