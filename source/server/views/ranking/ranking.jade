extends ../shared/layout
block main-content
    img.champ(src="/assets/champ.png")
    table.table.table-striped.table-hover
        thead
            tr
                th.text-center #
                th.text-center Username
                th.text-center Points
        tbody
            each user,i in usersByRank
                tr.text-center
                    if i+1 === 1
                        td#goldUser.topUsers=i+1
                    else if i+1 === 2
                        td#silverUser.topUsers=i+1
                    else if i+1 === 3
                        td#bronzeUser.topUsers=i+1
                    else
                        td=i+1
                    td=user.username
                    td=user.points
    #search-bar
        form.form-horizontal
            fieldset
                legend Search by range
                .form-group
                    label.col-lg-2.control-label(for='from') From
                    .col-lg-10
                        input#from.form-control(type='number', placeholder='From')
                .form-group
                    label.col-lg-2.control-label(for='to') To
                    .col-lg-10
                        input#to.form-control(type='number', placeholder='To')
                .form-group
                    .col-lg-10.col-lg-offset-2
                        button.btn.btn-primary(type='submit') Submit
        br
        form.form-horizontal
            filedset
                legend Search by username
                .form-group
                    label.col-lg-2.control-label(for='user') User
                    .col-lg-10
                        input#user.form-control(type='text', placeholder='Username')
                .form-group
                    .col-lg-10.col-lg-offset-2
                        button.btn.btn-primary(type='submit') Submit

