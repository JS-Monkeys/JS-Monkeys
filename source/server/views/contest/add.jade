            //  label.col-lg-2.control-label(for='inputPassword') Password
            //  .col-lg-10
            //    input#inputPassword.form-control(type='password', name='contestPassword', ng-model='contest.password', ng-minlength='6', required='required', placeholder='Password')
            //.text-center.error(ng-show='contest.password !== contest.confirmPassword && addContestForm.confirmPassword.$dirty') Confirm password is not the same as password!
            //.form-group
            //  label.col-lg-2.control-label(for='confirmPassword') Confirm Password
            //  .col-lg-10
            //    input#confirmPassword.form-control(type='password', name='confirmPassword', ng-model='contest.confirmPassword', ng-minlength='6', required='required', placeholder='Confirm Password')
            .form-group
              .col-lg-3.col-lg-offset-7
                button.btn.btn-primary.full-width(type="submit", ng-disabled='addContestForm.$invalid || (contest.startDate >= contest.endDate) || !contest.startDate || !contest.endDate') Submit
